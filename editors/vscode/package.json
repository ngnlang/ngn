{
  "name": "vscode-ngn",
  "displayName": "ngn",
  "description": "Language support for NGN",
  "version": "0.0.1",
  "publisher": "ngnlang",
  "engines": {
    "vscode": "^1.106.0"
  },
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "ngn",
        "aliases": [
          "ngn"
        ],
        "extensions": [
          ".ngn"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ngn",
        "scopeName": "source.ngn",
        "path": "./syntaxes/ngn.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[ngn]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "keyword.declaration:ngn": "#569CD6",
          "keyword.readonly:ngn": "#569CD6",
          "function.defaultLibrary:ngn": "#e2a41d",
          "variable.defaultLibrary:ngn": "#e2a41d",
          "variable.readonly:ngn": "#7BB5E6",
          "regexp:ngn": "#D16969"
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.0",
    "@vscode/vsce": "^2.20.0",
    "typescript": "^5.9.3"
  },
  "license": "MIT",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  }
}
